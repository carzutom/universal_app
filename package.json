{
  "name": "universal_app",
  "version": "1.0.0",
  "description": "universal app",
  "main": "dist/server.bundle.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run api\"",
    "build-dev": "npm run client-dev && npm run server-dev",
    "build-prod": "npm run client-prod && npm run server-prod",
    "client-dev": "webpack --mode development --config webpack.base.config.js --progress",
    "client-prod": "webpack --mode production --config webpack.prod.config.js --env.NODE_ENV=production --progress --colors",
    "api": "nodemon src/api/index.js",
    "server": "nodemon dist/server.bundle.js",
    "server-dev": "webpack --config webpack.server.dev.config.js",
    "server-prod": "webpack --config webpack.server.prod.config.js"
  },
  "homepage": "https://github.com/carzutom/universal_app#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carzutom/universal_app.git"
  },
  "bugs": {
    "url": "https://github.com/carzutom/universal_app/issues"
  },
  "keywords": [
    "react",
    "redux",
    "ssr",
    "mern"
  ],
  "author": "soveluss",
  "license": "UNLICENSED",
  "dependencies": {
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "is-empty": "^1.2.0",
    "jsonwebtoken": "^8.5.0",
    "mongoose": "^5.4.15",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-helmet": "^5.2.0",
    "react-redux": "^6.0.1",
    "react-redux-i18n": "^1.9.3",
    "react-router-config": "^4.4.0-beta.6",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "uuid": "^3.3.2",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-stage-2": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "clean-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^5.0.0",
    "css-loader": "^2.1.0",
    "express": "^4.16.4",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "imports-loader": "^0.8.0",
    "isomorphic-loader": "^2.0.2",
    "json-loader": "^0.5.7",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "nodemon": "^1.18.10",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "script-loader": "^0.7.2",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.0",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  }
